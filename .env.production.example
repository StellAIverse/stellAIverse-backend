# Production Environment Configuration
# Copy this file to .env for production deployment
# CRITICAL: Update ALL values before deploying

# Server Configuration
NODE_ENV=production
PORT=3000
API_PREFIX=/api/v1

# Database - Use managed database service (AWS RDS, Google Cloud SQL, etc.)
# NEVER commit real credentials
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE?sslmode=require

# JWT Configuration
# Generate strong secret: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_STRONG_RANDOM_SECRET_MINIMUM_64_CHARACTERS
JWT_EXPIRATION=1h
JWT_MAX_AGE=3600

# CORS - Comma-separated list of allowed origins
CORS_ORIGIN=https://app.stellaiverse.com,https://www.stellaiverse.com

# AI Services
OPENAI_API_KEY=
GROK_API_KEY=
LLAMA_API_BASE_URL=

# Blockchain
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
CHAIN_ID=1

# Redis (use managed Redis service)
REDIS_URL=redis://USER:PASSWORD@HOST:6379

# Logging
LOG_LEVEL=error

# Email Service - Use production SMTP (SendGrid, AWS SES, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
EMAIL_FROM=noreply@stellaiverse.com
EMAIL_VERIFICATION_URL=https://api.stellaiverse.com/api/v1/auth/verify-email

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Security Headers
HSTS_MAX_AGE=31536000

# Session Configuration
SESSION_SECRET=REPLACE_WITH_STRONG_RANDOM_SECRET_MINIMUM_32_CHARACTERS
